{
  "name": "nest-js-starter",
  "version": "0.0.0",
  "description": "Nest JS app starter",
  "author": "Rodolfo Canessa",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:prod": "NODE_ENV=production ts-node -F -r tsconfig-paths/register src/main.ts",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "lint": "./node_modules/.bin/tslint -c tslint.json 'src/**/*.ts'"
  },
  "dependencies": {
    "@nest-modules/mailer": "^0.2.1",
    "@nestjs/common": "^5.3.5",
    "@nestjs/core": "^5.3.4",
    "@nestjs/jwt": "^0.1.3",
    "@nestjs/passport": "^1.1.0",
    "@nestjs/swagger": "^2.4.4",
    "@nestjs/typeorm": "^5.2.0",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/moment": "^2.13.0",
    "automapper-ts": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "cache-manager": "^2.9.0",
    "class-validator": "^0.9.1",
    "compression": "^1.7.3",
    "config": "^2.0.1",
    "express-rate-limit": "^3.2.0",
    "fastify-formbody": "^2.0.0",
    "helmet": "^3.13.0",
    "jsonwebtoken": "^8.3.0",
    "moment": "^2.23.0",
    "mysql": "^2.16.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.2",
    "typeorm": "^0.2.7",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.2.2",
    "@types/bcryptjs": "^2.4.1",
    "@types/config": "0.0.34",
    "@types/express": "^4.0.39",
    "@types/jest": "^21.1.8",
    "@types/node": "^9.6.30",
    "@types/nodemailer": "^4.6.5",
    "@types/supertest": "^2.0.4",
    "jest": "^21.2.1",
    "nodemon": "^1.14.1",
    "prettier": "^1.11.1",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "^5.11.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "moduleNameMapper": {
      "@constants": "<rootDir>/app.constants",
      "@utils/(.*)": "<rootDir>/utils/$1",
      "@enums/(.*)": "<rootDir>/enums/$1",
      "@modules/(.*)": "<rootDir>/modules/$1",
      "@models/(.*)": "<rootDir>/models/$1",
      "@base/(.*)": "<rootDir>/modules/base/$1",
      "@services/(.*)": "<rootDir>/services/$1",
      "@entities/(.*)": "<rootDir>/database/entities/$1"
    }
  }
}
